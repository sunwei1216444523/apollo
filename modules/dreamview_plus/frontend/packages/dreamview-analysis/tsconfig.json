{
    "extends": "../tslint-config-dreamview/index.json",
    "compilerOptions": {
        "jsx": "react",
        "typeRoots": [
            "lib",
            "react",
            "src/@types",
            "node_modules/@types"
        ]
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "src/@types/**.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules"
    ]
}
